package j06_packageTest;

class Car {
    // ** 맴버변수, 필드(field) : 속성 
	public int speed;
	public int mileage;
	public String color = "yellow";
	
	// **
	
    // ** 맴버메서드 (Method, function, procedure)
	public void speedUp() {speed += 10;}
	public void speedDown() {speed -= 10;}
	 
	public String toString() {
		return "[ 속도: " + speed + ", 주행거리: " + mileage + ", 색상: " + color + " ]";
	}
	
} //Car


public class Ex01_CarTest {

	public static void main(String[] args) {
		System.out.println("** Car class Test **");
	    // ** 객체 생성과 사용
	    // => 생성 -> 사용 -> 소멸
	    // => 생성: "인스턴스화 한다" 또는 "인스턴스를 생성한다" 라고 함
		Car myCar = new Car();
		myCar.color = "white";
		myCar.mileage = 1000;
		myCar.speed = 500;
		myCar.speedUp();
		System.out.println("** myCar toString => " + myCar.toString());
		System.out.println("** myCar => " + myCar);
		
	    // ** 소멸 : 메모리청소
	    // => 더이상 사용되지않는 값들은 자동제거해줌
	    // => Garbage Collector (쓰레기 수집기)
	    // => 정해진 알고리즘에 의해 작동됨 ( 일정시간동안 또는 더이상 참조되지않는등등... )   
	    // => 참조형 변수에 null 값을 주면 소멸 (더이상 참조되지않음)
		myCar = null; // null -> 값 없음을 의미
		//myCar.color; -> 그러므로 접근불가 : 컴파일오류
		//myCar.speedDown(); -> 실행오류 : java.lang.NullPointerException
		
		Car mCar = new Car();
		mCar.color = "red";
		mCar.mileage = 20;
		mCar.speed = 260;
		mCar.speedUp();
		System.out.println("** mCar toString => " + mCar.toString());
		System.out.println("** mCar => " + mCar);
		
		Car rCar = mCar;  // mCar의 주소값이 전달됨
		System.out.println("** rCar => " + rCar);
		
		Car fCar = new Car();
		fCar.color = "black";
		fCar.mileage = 30;
		fCar.speed = 330;
		fCar.speedUp();
		System.out.println("** fCar toString => " + fCar.toString());
		System.out.println("** fCar => " + fCar);
		
		
		
		
	} //main

} //class
