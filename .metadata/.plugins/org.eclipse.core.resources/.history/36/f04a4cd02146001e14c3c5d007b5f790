package j01_basic;

import java.util.Date;

public class Ex06_Print {

	public static void main(String[] args) {
	      // ** Escape 문자 : 역활이 정해져 있는 문자
	      // => \n 줄바꿈, \t 탭간격, ...   
	      // => 경로: D:\MTest\MyWork\Java01..
		  String path="C:\\Users\\leejk\\Desktop\\leejk\\MTest\\MyWork\\Java01\\src\\j01_basic" ;
		  System.out.println("** path => " + path);
		
		  // => 'ABC' , "ABC" 출력 하려면 특수기호 앞에 \ 를 붙인다
		  System.out.println("** 따옴표 출력 => " + "'ABC' , \"ABC\"");
		  System.out.println("abcd\tefghi\tjk123\n"); // /t -> 탭 거리 공백
	      System.out.println("\n");
	      System.out.println('\n'); // 한문자만(char) 출력하는 경우-> 작은따옴표 허용
	      System.out.println('\''); // char ' 출력
	      System.out.println('A');
	      System.out.println('가');
	      
	      // ** print, println, printf
	      System.out.print("** print1 => 줄바꿈 안되요 ~~");
	      System.out.print("** print2 => 저는 줄바꿈 되요 ~~ \n");
	      System.out.print("** print3 => tab1 \t tab2 \t tab3");
	      System.out.println("");
	      System.out.print("** print4 => 줄바꿈 안되요 ~~ \n");
	      System.out.printf("반지름이 %d인 원의 넓이 = %10.2f \n", 10, 10 * 10 * Math.PI);
	      //System.out.printf("%s 는 %d학년 %d반, 학점은 %s \n", "홍길동", 1.2, 2, 'A');
	      // => 출력Data 와 Format이 Type 안맞으면 -> 컴파일오류 없고 런타임오류
	      //   java.util.IllegalFormatConversionException: d != java.lang.Double
	      
	      // ** 날짜출력
	      // => java.util.Date
	      // => import
	      Date now = new Date();
	      
	      
	      // => 출력형식
	      // % : 출력형식을 의미하는 문자열은 반드시 %로 시작,
	      // %d : 정수 , %f 실수, %s 문자 
	      // %,d : 정수에 3자리마다  , 표시 
	      // %t : 날짜 시간을  
	      // %n , \n : 줄바꿈
	      // $ 사용하면 매개변수의 갯수를 줄일 수 있음
	      // => %2$d : 2번째 매개변수 정수

		
		
	} //main

} //class
