package j02_ifSwitch;

import java.util.Scanner;

// ** 실습과제 
// 1. 월을 입력 받아서 (Scanner 사용)
// 2. 몇일까지 인지,
// => 1,3,5,7,8,10,12월 => ?월은 31일 까지 입니다.
// => 4,6,9,11 월 => ?월은 30일 까지 입니다.
// => 2 월 => ?월은 29일 까지 입니다.
// 3. 무슨 계절인지 출력 하기
// => 3~5:봄 , 6~8:여름, 9~11:가을, 12~2:겨울

// ** switch case 구문으로 작성 하세요 ~~

public class Ex04_switchMonth {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("** 월을 입력하세요 =>");
		int m = Integer.parseInt(sc.nextLine());
		switch(m) {
		case 1: System.out.println("** 1월은 31일 까지 입니다 **");
				  if ( m >= 3 && m <= 5) {
					  System.out.println("** 봄 입니다 **");
				  } else if ( m >= 6 && m <= 8 ) {
					  System.out.println("** 여름 입니다 **");					  
				  } else if ( m <= 2 && m <= 12)
		
		case 2: System.out.println("** 2월은 28일 (2023년도기준) 까지 입니다 **");
		case 3: System.out.println("** 3월은 31일 까지 입니다 **");
		case 4: System.out.println("** 4월은 30일 까지 입니다 **");
		case 5: System.out.println("** 5월은 31일 까지 입니다 **");
		case 6: System.out.println("** 6월은 30일 까지 입니다 **");
		case 7: System.out.println("** 7월은 31일 까지 입니다 **");
		case 8: System.out.println("** 8월은 31일 까지 입니다 **");
		case 9: System.out.println("** 9월은 30일 까지 입니다 **");
		case 10: System.out.println("** 10월은 31일 까지 입니다 **");
		case 11: System.out.println("** 11월은 30일 까지 입니다 **");
		case 12: System.out.println("** 12월은 31일 까지 입니다 **");
		
		}

	} //main

} //class
