package j03_forWhile;

public class Ex03_infinityLoop {

	public static void main(String[] args) {
		// 1) for
		int count = 0;
		System.out.println("** 무한 Loop Test => for **");
		for (;;) { // 무조건
			System.out.println("** count => " + count++);
			if (count > 10000)
				break; // 무조건 탈출
		}
		// 2) while
		int count = 0;
		System.out.println("** 무한 Loop Test => for **");

	} // main

} // class
