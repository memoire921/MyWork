package j02_ifSwitch;

import java.util.Scanner;

// ** 실습과제 
// 1. 월을 입력 받아서 (Scanner 사용)
// 2. 몇일까지 인지,
// => 1,3,5,7,8,10,12월 => ?월은 31일 까지 입니다.
// => 4,6,9,11 월 => ?월은 30일 까지 입니다.
// => 2 월 => ?월은 29일 까지 입니다.
// 3. 무슨 계절인지 출력 하기
// => 3~5:봄 , 6~8:여름, 9~11:가을, 12~2:겨울

// ** switch case 구문으로 작성 하세요 ~~

public class Ex04_switchMonth {

	public static void main(String[] args) {
		int month = 0;
		int days = 0;
		String season = null;
		Scanner sc = new Scanner(System.in);
		
		System.out.println("** 월을 입력하세요 =>");
		month = Integer.parseInt(sc.nextLine());
		
		switch(month) {
		case 1: 
			System.out.println("** 1월은 31일 까지 입니다 **");
			days = "31일";
			season = "겨울";
		case 2: 
			System.out.println("** 2월은 28일 (2023년도기준) 까지 입니다 **");
			season = "겨울";
		case 3: 
			System.out.println("** 3월은 31일 까지 입니다 **");
			season = "봄";
		case 4: 
			System.out.println("** 4월은 30일 까지 입니다 **");
			season = "봄";
		case 5: 
			System.out.println("** 5월은 31일 까지 입니다 **");
			season = "봄";
		case 6: 
			System.out.println("** 6월은 30일 까지 입니다 **");
			season = "여름";
		case 7: 
			System.out.println("** 7월은 31일 까지 입니다 **");
			season = "여름";
		case 8: 
			System.out.println("** 8월은 31일 까지 입니다 **");
			season = "여름";
		case 9: 
			System.out.println("** 9월은 30일 까지 입니다 **");
			season = "가을";
		case 10: 
			System.out.println("** 10월은 31일 까지 입니다 **");
			season = "가을";
		case 11: 
			System.out.println("** 11월은 30일 까지 입니다 **");
			season = "가을";
		case 12: 
			System.out.println("** 12월은 31일 까지 입니다 **");
			season = "겨울";
		
		System.out.printf(" %d월은 %d까지 있고, %s 입니다. \n", month, days, season);
		}

	} //main

} //class
